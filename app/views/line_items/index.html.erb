<div class="page-header">
  <h1>
    Line items
    <a href="/line_items/new" class="btn btn-lg btn-success">New Line item</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Inventory</th>
        <th>Proposed trade</th>
        <th>Quantity</th>
        <th>Actions</th>
      </tr>

      <% @line_items.each do |line_item| %>
      <tr>
        <td>
          <% if line_item.inventory.present? %>
            <a href="/inventories/<%= line_item.inventory.id %>">
              <%= line_item.inventory.user_id %>
            </a>
          <% end %>
        </td>
        <td>
          <% if line_item.proposed_trade.present? %>
            <a href="/proposed_trades/<%= line_item.proposed_trade.id %>">
              <%= line_item.proposed_trade.status %>
            </a>
          <% end %>
        </td>
        <td><%= line_item.quantity %></td>
        <td>
          <a href="/line_items/<%= line_item.id %>" class="btn btn-primary">Show</a>
          <a href="/line_items/<%= line_item.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_line_item/<%= line_item.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @line_items, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
